<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/Records"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:focusable="false"
                    android:focusableInTouchMode="true">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="List of Records"
                            android:id="@+id/lblListOfRecords"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <GridView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/gridView"
                            android:layout_below="@+id/lblListOfRecords"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="47dp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Settings"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="User Settings"
                        android:id="@+id/lblUserSettings"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Name"
                        android:ems="10"
                        android:id="@+id/nametxt"
                        android:layout_marginTop="27dp"
                        android:layout_below="@+id/lblUserSettings"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:enabled="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/emailtxt"
                        android:hint="Email:"
                        android:singleLine="false"
                        android:enabled="true"
                        android:layout_marginTop="26dp"
                        android:layout_below="@+id/nametxt"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/phonetxt"
                        android:hint="Phone Number:"
                        android:selectAllOnFocus="true"
                        android:enabled="true"
                        android:layout_below="@+id/emailtxt"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="28dp"
                        android:layout_alignParentEnd="true" />

                    <Button
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/btnSaveSettings"
                        android:layout_gravity="right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/lblName" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/lblEmail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/lblPhone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Record"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Add Record"
                            android:id="@+id/lblAddRecord"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Site Name:"
                            android:ems="10"
                            android:id="@+id/txtSite"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_below="@+id/lblAddRecord"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Site"
                            android:id="@+id/btnChngSite"
                            android:layout_gravity="center_horizontal"
                            android:layout_toStartOf="@+id/lblAddRecord"
                            android:layout_below="@+id/txtSite"
                            android:layout_alignRight="@+id/btnPlant"
                            android:layout_alignEnd="@+id/btnPlant" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Species:"
                            android:ems="10"
                            android:id="@+id/txtSpecies"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_toEndOf="@+id/lblAddRecord"
                            android:layout_above="@+id/txtAbundance"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="24dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Comments:"
                            android:ems="10"
                            android:id="@+id/txtComments"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:layout_above="@+id/btnPlant"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photo of Plant"
                            android:id="@+id/btnPlant"
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Species Details"
                            android:id="@+id/lblSpeciesDetails"
                                android:layout_gravity="center_horizontal"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:layout_above="@+id/txtSpecies"
                            android:layout_below="@+id/btnChngSite"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="30dp" />

                        <Spinner
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:hint="Abundance"
                            android:ems="10"
                            android:id="@+id/txtAbundance"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_toEndOf="@+id/btnChngSite"
                            android:layout_marginBottom="29dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:spinnerMode="dropdown"
                            android:layout_above="@+id/txtComments"
                            android:layout_toRightOf="@+id/btnChngSite" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photo of Scene"
                            android:id="@+id/btnScene"
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_alignTop="@+id/btnPlant"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:id="@+id/btnSave"
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_toEndOf="@+id/lblAddRecord"
                            android:layout_alignTop="@+id/txtSpecies"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Abundance"
                            android:id="@+id/textView"
                            android:layout_toStartOf="@+id/lblSpeciesDetails"
                            android:layout_alignTop="@+id/txtAbundance"
                            android:textSize="18dp" />
                    </RelativeLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>


</RelativeLayout>
